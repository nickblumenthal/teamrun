<div class="session background-img-container"></div>
<form class="form-signin" action="<%= session_url %>" method="post">
  <h2 class="form-signin-heading text-center">Sign In</h2>
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"
  >
  <label for="user_email" class="sr-only">Email</label>
  <input
    type="email"
    name="user[email]"
    class="form-control"
    placeholder="Email address"
    value="<%= @user.email %>"
    id="user_email"
    required
  >

  <label for="user_password" class="sr-only">Password</label>
  <input
    type="password"
    name="user[password]"
    id="user_password"
    class="form-control"
    placeholder="Password"
    required
  >

  <button
    type="submit"
    class="btn btn-lg btn-primary btn-block"
  >
    Sign In
  </button>
</form>
