<div class="event-information row">
  <div class="col-xs-12">
    <div class="row event-name">
      <div class="col-xs-12">
        <h2><a href="#events/<%= event.id %>"><%= event.escape('name') %></a></h2>
      </div>
    </div>
    <hr>
    <div class="row event-content">
      <div class="col-xs-6">
        <section><%= event.escape('description') %></section>
      </div>
      <div class="col-xs-4 col-xs-offset-1 event-specifics">
        <div>Location: <%= event.escape('location') %></div>
        <div><time>Date: <%= moment(event.escape('date')).format("MMM Do YY") %><time></div>
        <div><time>Time: <%= moment(event.escape('time')).format("h:mm a") %><time></div>
      </div>
    </div>
  </div>
</div>
